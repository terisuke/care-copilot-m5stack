# =============================================
# Care Copilot - 環境変数設定
# =============================================

# ---------------------------------------------
# LINE Messaging API設定（必須）
# ---------------------------------------------

# LINE Developers Consoleから取得
# https://developers.line.biz/
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# 友だち追加後に自動取得されるUser ID
# 複数の場合はカンマ区切り（自動登録されるため手動設定不要）
LINE_USER_ID=

# ---------------------------------------------
# サーバー設定
# ---------------------------------------------
PORT=3000
NODE_ENV=development

# ---------------------------------------------
# MQTT設定（パブリックブローカー使用）
# ---------------------------------------------
MQTT_BROKER=mqtt://broker.hivemq.com
MQTT_USERNAME=
MQTT_PASSWORD=

# =============================================
# 以下は将来の拡張用（現時点では不要）
# =============================================

# データベース（将来実装）
DB_HOST=localhost
DB_PORT=5432
DB_NAME=care_copilot
DB_USER=postgres
DB_PASSWORD=

# Redis（将来実装）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# セキュリティ（将来実装）
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# 外部API（将来実装）
OPENAI_API_KEY=
GOOGLE_MAPS_API_KEY=

# ログ設定
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =============================================
# 重要な注意事項
# =============================================
# 1. LINE_CHANNEL_ACCESS_TOKENは必ず設定してください
# 2. LINE_CHANNEL_SECRETは必ず設定してください
# 3. LINE_USER_IDは友だち追加後に自動取得されます
# 4. このファイルをGitにコミットしないでください！
# =============================================